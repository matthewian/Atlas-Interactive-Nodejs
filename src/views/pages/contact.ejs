                    <form>
                        <input type="text" id="name" placeholder="enter name or company...">
                        <input type="email" id="email" placeholder="enter email...">
                        <textarea id="message" placeholder="tell us a bit more about your company and needs."></textarea>
                    </form>
                </div>
            </div>
        </div>
        <%- include('../components/footer') %>
    </body>
